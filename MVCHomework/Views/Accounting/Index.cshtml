@using MVCHomework.ViewModels
@model RecordViewModel
@{
    ViewBag.Title = "我的記帳本";
}

<div class="well">
    @using (Html.BeginForm("Index", "Accounting", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.Action("CategoryDropDownList")
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Money, new { @for = "money", @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Money, new { placeholder = "金額", name = "money", @class = "form-control", required = "true", id = "money", MinLength = 1 })
            </div>
            <div class="col-sm-10 col-sm-push-2">
                @Html.ValidationMessageFor(m => m.Money, string.Empty, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Date, new { @for = "date", @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Date, new { placeholder = "日期", @class = "form-control", id = "date", required = "true" })
            </div>
            <div class="col-sm-10 col-sm-push-2">
                @(Html.ValidationMessageFor(m => m.Date, string.Empty, new { @class = "text-danger" }))
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Description, new { @for = "description", @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", id = "description", required = "true" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <button type="submit" class="btn btn-default">送出</button>
            </div>
        </div>
    }
</div>
@Html.Action("Records")