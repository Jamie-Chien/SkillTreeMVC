@model List<MVCHomework.ViewModels.RecordViewModel>
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.No</td>
                    <td>@item.Category.GetEnumDisplayName()</td>
                    <td>@item.Date.ToString("yyyy-MM-dd")</td>
                    <td>@item.Money.ToString("#,##0")</td>
                </tr>
            }
        </table>
    </div>
</div>
